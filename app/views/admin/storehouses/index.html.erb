<% content_for :title do %>
  仓库管理
<% end %>
<h2 class="col-sm-offset-5">
   <a href="/admin/storehouses">仓库管理</a>
</h2>
<div class="container">
  <%= link_to '添加仓库', new_admin_storehouse_path, class: 'btn btn-success' %>
  <% if @storehouses.present? %>
    <div class="panel panel-default margin-top-10">
      <table class="table table-hover table-striped table-bordered table-condensed">
        <thead>
          <tr>
            <th>id</th>
            <th>仓库名称</th>
            <th>仓库地址</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @storehouses.each do |storehouse| %>
            <tr>
              <td><%= storehouse.id %></td>
              <td class="col-sm-4"><%= storehouse.name %></td>
              <td class="col-sm-6"><%= storehouse.detail %></td>
              <td class="col-sm-1">
               <%= link_to '修改', edit_admin_storehouse_path(storehouse) %>
               <%= link_to '删除', admin_storehouse_path(storehouse), method: :delete, data: { confirm: '确定要删除吗？' } %> 
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= paginate @storehouses %>
  <% else %>
    <div class="col-sm-offset-2">
      <h2>暂无</h2>
    </div>
  <% end %>
</div>
