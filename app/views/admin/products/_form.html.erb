<%= form_for([:admin,@product],html: {class: "form-horizontal", role: "form", multipart: true}) do |f| %>
  <div class ="form-group">
    <label class="col-sm-2 control-label">产品名称:</label>
    <div class="col-sm-4">
      <%= f.text_field :name,class:"form-control"%>
    </div>
  </div>
  <div class ="form-group">
    <label class="col-sm-2 control-label">产品描述:</label>
    <div class="col-sm-4">
      <%= f.text_area :desc,class:"form-control"%>
    </div>
  </div>
  <div class ="form-group">
    <label class="col-sm-2 control-label">产品详情:</label>
    <div class="col-sm-4">
      <%= f.text_area :info,class:"form-control"%>
    </div>
  </div>
  <div class ="form-group">
    <label class="col-sm-2 control-label">大类别:</label>
    <div class="col-sm-4">
      <% options = Category.order(:id).pluck(:name, :id) %>
      <%= f.select :category_id, options.insert(0,["选择大类别",""]), { selected: @product.category_id }, id: 'product_category_id', class: 'form-control' %>
    </div>
  </div>
  <div class ="form-group">
    <label class="col-sm-2 control-label">子类别:</label>
    <div class="col-sm-4">
      <%
        if @product.category_id.present?
          options = SubCategory.where(category_id: @product.category_id).order(:id).pluck(:name, :id)
        else
          options = [["选择子类别",""]]
        end
      %>
      <%= f.select :sub_category_id, options, { selected: @product.sub_category_id }, id: 'product_sub_category_id', class: 'form-control' %>
    </div>
  </div>
  <div class ="form-group">
    <label class="col-sm-2 control-label">具体类别:</label>
    <div class="col-sm-4">
      <%
        if @product.sub_category_id.present?
          options = DetailCategory.where(sub_category_id: @product.sub_category_id).order(:id).pluck(:name, :id)
        else
          options = [["选择具体类别",""]]
        end
      %>
      <%= f.select :detail_category_id, options, { selected: @product.detail_category_id }, id: 'product_detail_category_id', class: 'form-control' %>
    </div>
  </div>
  <div class ="form-group">
    <label class="col-sm-2 control-label">热门类别:</label>
    <div class="col-sm-4">
      <%= f.select :hot_category_id, hot_category_list,{},class: 'form-control'%>
    </div>
  </div>
  <div class ="form-group">
    <label class="col-sm-2 control-label">状态:</label>
    <div class="col-sm-4">
      <%= f.select :state, state_list,{},class: 'form-control'%>
    </div>
  </div>
  <div class ="form-group">
    <label class="col-sm-2 control-label">单位:</label>
    <div class="col-sm-4">
      <%= f.select :unit_id, unit_list,{},class: 'form-control'%>
    </div>
  </div> 
  <div class ="form-group">
    <label class="col-sm-2 control-label">图片:</label>
    <div class="col-sm-4">
      <%= f.file_field :image,:multiple=>true,class:"form-control"%>
    </div>
  </div>
  <div class ="form-group">
    <label class="col-sm-2 control-label">库存数量:</label>
    <div class="col-sm-4">
      <%= f.text_field :stock_num,class:"form-control"%>
    </div>
  </div>
  <div class ="form-group">
    <label class="col-sm-2 control-label">销量:</label>
    <div class="col-sm-4">
      <%= f.text_field :sale_count,class:"form-control"%>
    </div>
  </div>
  <div class ="form-group">
    <label class="col-sm-2 control-label">价格:</label>
    <div class="col-sm-4">
      <%= f.text_field :price,class:"form-control"%>
    </div>
  </div>
  <div class ="form-group">
    <label class="col-sm-2 control-label">原始价格:</label>
    <div class="col-sm-4">
      <%= f.text_field :old_price,class:"form-control"%>
    </div>
  </div>
    <div class ="form-group">
    <label class="col-sm-2 control-label">规格:</label>
    <div class="col-sm-4">
      <%= f.text_field :spec,class:"form-control"%>
    </div>
  </div>
  <div class ="form-group">
    <label class="col-sm-2 control-label">单价:</label>
    <div class="col-sm-4">
      <%= f.text_field :unit_price,class:"form-control"%>
    </div>
  </div>
    <div class ="form-group">
    <label class="col-sm-2 control-label">产地:</label>
    <div class="col-sm-4">
      <%= f.text_field :origin,class:"form-control"%>
    </div>
  </div>
    <div class ="form-group">
    <label class="col-sm-2 control-label">备注:</label>
    <div class="col-sm-4">
      <%= f.text_field :remark,class:"form-control"%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-4">
      <button calss="btn btn-success" type="submit">
        <span class="glyphicon glyphicon-floppy-save">保存</span>
      </button>
    </div>
  </div>
<% end %>
<script type="text/javascript">
$("[name='product[category_id]']").change(function(){
  var set_url = "<%= select_category_admin_products_url %>" + "?category_id=" + $("[name='product[category_id]']").val() + "?id=product_sub_category_id?name=product[sub_category_id]";
  jQuery.ajax({
    type: "GET",
    url: set_url,
    dataType: "json",
    success: function(data){
      $('#product_sub_category_id').html(data.html);
    }
  });
});
$("[name='product[sub_category_id]']").change(function(){
  var set_url = "<%= select_sub_category_admin_products_url %>" + "?sub_category_id=" + $("[name='product[sub_category_id]']").val() + "?id=product_detail_category_id?name=product[detail_category_id]";
  jQuery.ajax({
    type: "GET",
    url: set_url,
    dataType: "json",
    success: function(data){
      $('#product_detail_category_id').html(data.html);
    }
  });
});
</script>
