<%= form_for([:admin,@promoter],html: {class: "form-horizontal", role: "form", multipart: true}) do |f| %>
  <div class ="form-group">
    <label class="col-sm-2 control-label">姓名:</label>
    <div class="col-sm-4">
      <%= f.text_field :name,class:"form-control" %>
    </div>
  </div>
  <div class ="form-group">
    <label class="col-sm-2 control-label">头像:</label>
    <div class="col-sm-4">
      <%= f.file_field :image, :multiple=>true, class:"form-control" %>
    </div>
  </div>
  <div class ="form-group">
    <label class="col-sm-2 control-label">电话:</label>
    <div class="col-sm-4">
      <%= f.text_field :phone, class:"form-control" %>
    </div>
  </div>
  <div class ="form-group">
    <label class="col-sm-2 control-label">性别:</label>
    <div class="col-sm-4">
      <%= f.select :sex, [['男', 'man'], ['女', 'woman']],{},class: 'form-control' %>
    </div>
  </div>
  <div class ="form-group">
    <label class="col-sm-2 control-label">身份证:</label>
    <div class="col-sm-4">
      <%= f.text_field :id_card, class:"form-control" %>
    </div>
  </div>
  <div class ="form-group">
    <label class="col-sm-2 control-label">材料数量:</label>
    <div class="col-sm-4">
      <%= f.text_field :material, class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-4">
      <button class="btn btn-success" type="submit">
        <span class="glyphicon glyphicon-floppy-save">保存</span>
      </button>
      <button class="btn btn-success" type="button" onclick="javascript:history.go(-1);">
        <span class="glyphicon glyphicon-hand-left">返回</span>
      </button>
    </div>
  </div>
<% end %>
