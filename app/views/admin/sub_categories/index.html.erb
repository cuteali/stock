<% content_for :title do %>
  小类别列表
<% end %>
<h2 class="col-sm-offset-5">
   <a href="/admin/sub_categories">小类别列表</a>
</h2>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <%= search_form_for @q, url: {action: action_name}, class: 'form-inline', html: { method: :get } do |f| %>
        <div class="col-md-2 row pull-left">
          <%= link_to '添加小类别', new_admin_sub_category_path, class: 'btn btn-success' %>
        </div>
        <div class="col-md-10 row">
          <%= f.label '大类别：' %>
          <% options = Category.sorted.pluck(:name, :id) %>
          <%= f.select :category_id_eq, options.insert(0,["选择大类别",""]), { selected: @category_id }, id: 'category_id', class: "form-control" %>
          <%= f.submit '查询', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
  <% if @sub_categories.present? %>
    <div class="panel panel-default">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>id</th>
            <th>类别名称</th>
            <th>父类别</th>
            <th>类别描述</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @sub_categories.each do |category| %>
            <tr>
              <td class="col-sm-1"><%= category.id %></td>
              <td class="col-sm-1"><%= category.name %></td>
              <td class="col-sm-1"><%= category.category.try(:name) || '暂无' %></td>
              <td class="col-sm-2"><%= category.desc %></td>
              <td class="col-sm-1">
                <%= link_to "置顶", stick_top_admin_sub_category_path(category), method: :post, data: { confirm: "确定将该类别置顶么？" } %> |
                <%= link_to '修改', edit_admin_sub_category_path(category) %> |
                <%= link_to '删除', admin_sub_category_path(category), method: :delete, data: { confirm: '确定要删除吗？' } %> 
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= paginate @sub_categories %>
  <% else %>
    <div class="col-sm-offset-2">
      <h2>暂无</h2>
    </div>
  <% end %>
</div>