<!DOCTYPE html>
<html>
<head>
  <title><%=yield(:my_title_info)%></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% unless invalid_path? %>
    <div>
      <%= render "admin/share/head"%>
    </div>
  <% end %>

  <div class="container">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
    <% end %>
  </div>

  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
