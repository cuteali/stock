<div class="container-fluid main-content">
  <div class="page-title print-pdf-hide">
    <h1>
      订单详情
    </h1>
  </div>
  <center class="print-hide print-pdf-show">
    <h1>
      要货啦  送货单
    </h1>
    <h4>
      要货啦客服电话：400-0050-383
    </h4>
  </center>
  <div class="invoice">
    <div class="row">
      <div class="col-lg-12">
        <div class="row invoice-header">
          <div class="text-left">
            <h2>
              订单号：<%= @order.order_no %>
            </h2>
            <h4>
              创建时间：<%= time_show(@order.created_at) %>
            </h4>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="well">
          <strong>收货人信息</strong>
          <h3>
            <%= @order.receive_name %>
          </h3>
          <p>
            <%= @order.phone_num %>
          </p>
          <p>
            <%= address_show(@order.address) %>
          </p>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="widget-container fluid-height">
          <div class="widget-content padded clearfix">
            <table class="table table-striped invoice-table">
              <thead>
                <th width="50"></th>
                <th>
                  货物名称
                </th>
                <th>
                  规格
                </th>
                <th width="70">
                  数量
                </th>
                <th width="100">
                  单价
                </th>
                <th width="100">
                  金额
                </th>
              </thead>
              <tbody>
                <% @products.each_with_index do |pro_hash, index|%>
                  <% product = Product.find_by(unique_id: pro_hash["unique_id"]) %>
                  <tr>
                    <td>
                      #<%= index + 1 %>
                    </td>
                    <td>
                      <%= product.name %>
                    </td>
                    <td>
                      <%= product.spec %>
                    </td>
                    <td>
                      <%= pro_hash["number"].to_s %>
                    </td>
                    <td>
                      &yen;<%= product.price %>
                    </td>
                    <td>
                      &yen;<%= product.price * pro_hash["number"].to_i %>
                    </td>
                  </tr>
                <% end if @products.present? %>
              </tbody>
              <tfoot>
                <tr>
                  <td class="text-right" colspan="3">
                    <strong>商品总数</strong>
                  </td>
                  <td>
                    <%= @products.map { |h| h["number"] }.sum %>
                  </td>
                  <td class="text-right">
                    <strong>商品总额</strong>
                  </td>
                  <td>
                    &yen;<%= @order.order_money %>
                  </td>
                </tr>
                <!--tr>
                  <td class="text-right" colspan="4">
                    <strong>运费</strong>
                  </td>
                  <td>
                    &yen;90
                  </td>
                </tr>
                <tr>
                  <td class="text-right" colspan="4">
                    <strong>运费险</strong>
                  </td>
                  <td>
                    &yen;10
                  </td>
                </tr-->
                <tr>
                  <td class="text-right" colspan="5">
                    <h4 class="text-primary">
                      总计
                    </h4>
                  </td>
                  <td>
                    <h4 class="text-primary">
                      &yen;<%= @order.order_money %>
                    </h4>
                  </td>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
      </div>
    </div>
    <!--div class="row">
      <div class="col-lg-12">
        <div class="well">
          <strong>备注信息</strong>
          <p>
            请尽快发送哦，亲！
          </p>
        </div>
      </div>
    </div-->
    <div class="row print-pdf-hide">
      <div class="col-lg-12">
        <a class="btn btn-primary pull-right" onclick="javascript:window.print();"><i class="icon-print"></i>打印订单</a>
      </div>
    </div>
  </div>
</div>